import java.util.*;
public class Waytoolongwords{
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        sc.nextLine();
        for(int i=0;i<a;i++){
            String b=sc.nextLine();
            if(b.length()>10){
                System.out.println( b.charAt(0)+Integer.toString(b.length()-2)+b.charAt(b.length()-1));
            }
            else{
                System.out.println(b);
            }
        }
    }
}