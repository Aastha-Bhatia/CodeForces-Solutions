import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int x=0;
        while(a>0){
            String s=sc.next();
            if(s.equals("++X")||s.equals("X++")){
                x+=1;
            }
            else if(s.equals("--X")||s.equals("X--")){
                x-=1;
            }
            a--;
        }
        System.out.print(x);
    }
}