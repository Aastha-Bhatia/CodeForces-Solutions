import java.util.*;
public class Main{
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int count=0;
        int arr[]=new int[3];
        while(n>0){
            int a=0;
            for(int i=0;i<3;i++){
                arr[i]=sc.nextInt();
                if(arr[i]==1){
                    a+=1;
                }
            }
            if(a>=2){
                count++;
            }
            n--;
        }
        System.out.println(count);
    }
}